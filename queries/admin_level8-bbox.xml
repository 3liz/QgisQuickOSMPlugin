<osm-script output="json" timeout="25">
  <!-- gather results -->
  <union>
    <!-- query part for: “boundary=administrative and admin_level=8” -->
    <query type="node">
      <has-kv k="boundary" v="administrative"/>
      <has-kv k="admin_level" v="8"/>
      <bbox-query {{bbox}}/>
    </query>
    <query type="way">
      <has-kv k="boundary" v="administrative"/>
      <has-kv k="admin_level" v="8"/>
      <bbox-query {{bbox}}/>
    </query>
    <query type="relation">
      <has-kv k="boundary" v="administrative"/>
      <has-kv k="admin_level" v="8"/>
      <bbox-query {{bbox}}/>
    </query>
  </union>
     <union>
          <item />
          <recurse type="down"/>
     </union>
     <print mode="body" />
</osm-script>