<osm-script output="json" timeout="25">
  <!-- gather results -->
  <union>
    <!-- query part for: “amenity=school” -->
    <query type="node">
      <has-kv k="amenity" v="school"/>
      <bbox-query {{bbox}}/>
    </query>
    <query type="way">
      <has-kv k="amenity" v="school"/>
      <bbox-query {{bbox}}/>
    </query>
    <query type="relation">
      <has-kv k="amenity" v="school"/>
      <bbox-query {{bbox}}/>
    </query>
  </union>
  <union>
    <item />
    <recurse type="down"/>
  </union>
  <!-- print results -->
  <print mode="meta"/>
</osm-script>